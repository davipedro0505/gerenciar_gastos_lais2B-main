<h2>Orçamentos</h2>

<form method="post" action="/orcamentos">
    <select name="usuarioId" required>
        <option value="">Selecionar usuário</option>
        {{#each usuarios}}
        <option value="{{this.id}}">{{this.nome}}</option>
        {{/each}}
    </select>

    <select name="categoriaId" required>
        <option value="">Selecionar categoria</option>
        {{#each categorias}}
        <option value="{{this.id}}">{{this.nome}}</option>
        {{/each}}
    </select>

    <input type="number" name="mes" min="1" max="12" placeholder="Mês" required>
    <input type="number" name="ano" placeholder="Ano" required>
    <input type="number" step="0.01" name="limite_gasto" placeholder="Limite" required>
    <button type="submit">Criar</button>
</form>

<table>
    <tr>
        <th>ID</th>
        <th>Usuário</th>
        <th>Categoria</th>
        <th>Mês/Ano</th>
        <th>Limite</th>
        <th>Ações</th>
    </tr>

    {{#each orcamentos}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.usuario_nome}}</td>
        <td>{{this.categoria_nome}}</td>
        <td>{{this.mes}}/{{this.ano}}</td>
        <td>{{this.limite_gasto}}</td>
        <td>
            <a href="/orcamentos/editar/{{this.id}}">Editar</a>
            <form method="post" action="/orcamentos/delete/{{this.id}}" class="inline">
                <button>Excluir</button>
            </form>
        </td>
    </tr>
    {{/each}}
</table>
